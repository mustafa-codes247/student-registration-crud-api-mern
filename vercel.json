// vercel.json (Must be in the project root)
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js", // Point to the server file
      "use": "@vercel/node"
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    // 1. Route all API calls to the serverless function path
    {
      "src": "/api/(.*)",
      "dest": "api/index.js" // Point to the file location
    },
    // 2. Route everything else to the frontend
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}