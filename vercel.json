{
  "version": 2,
  "builds": [
    // 1. Build configuration for the Express/Node.js Backend
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    // 2. Build configuration for the Vite/React Frontend
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist" 
      }
    }
  ],
  "routes": [
    // 1. Route: Send all requests starting with /api/ to the backend serverless function
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    // 2. Route: Send everything else (the main pages and client-side routes) to the static frontend build
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}